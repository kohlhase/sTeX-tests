TEX = $(filter-out $(AUX), $(shell ls *.tex))
PDF = $(TEX:%.tex=%.pdf)
SMS = $(MOD:%.tex=%.sms)
PDFLATEX = pdflatex -interaction nonstopmode -file-line-error

pdf: sms $(PDF)
sms: $(SMS)
all: pdf

$(PDF): %.pdf: %.tex $< sms
	$(PDFLATEX) $< 

$(SMS): %.sms: %.tex $<
	sms $<

# We generate a file localpath.tex which is needed for the tests.
PWD = $(shell pwd)
MATHHUB = $(PWD:%/$(REPOS)/source=%)

echo:
	@echo $(MATHHUB)
